---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import { Image } from 'astro:assets';

// Orden de las colecciones (la primera es la más reciente/destacada)
const collectionOrder = [
    { folder: 'vacuo', name: 'Vacuo' },
    { folder: 'vacas_2_3', name: 'Vacas 2.3' },
    { folder: 'vacas_2_2', name: 'Vacas 2.2' },
    { folder: 'vacas_2_0', name: 'Vacas' },
    { folder: 'recolectores', name: 'Recolectores' },
    { folder: 'ciudades_intermitentes', name: 'Ciudades Intermitentes' },
    { folder: '28', name: '28' },
    { folder: 'chosco', name: 'Chosco' },
    { folder: 'varias', name: 'Varias' },
];

// Importar todas las imágenes de assets
const allImages = import.meta.glob('/src/assets/**/*.{jpg,jpeg,png,webp,PNG,JPG,JPEG}', { eager: true });

// Agrupar imágenes por carpeta
const imagesByFolder: Record<string, any[]> = {};
Object.entries(allImages).forEach(([path, img]) => {
    // Extraer nombre de carpeta: /src/assets/vacuo/img.png -> vacuo
    const parts = path.split('/');
    const folderName = parts[3]; // índice 3 es la carpeta después de /src/assets/
    
    if (!imagesByFolder[folderName]) {
        imagesByFolder[folderName] = [];
    }
    imagesByFolder[folderName].push((img as any).default);
});

// Limitar a 3 piezas por colección para la vista previa
const PREVIEW_LIMIT = 3;
---

<Layout title="Colecciones">
    <Navbar />

    <main class="pt-24 px-4 sm:px-8 max-w-7xl mx-auto pb-16">
        <h1 class="text-4xl font-sans font-light text-stone-800 mb-12 uppercase tracking-widest">Colecciones</h1>
        
        {collectionOrder.map(({ folder, name }) => {
            const images = imagesByFolder[folder] || [];
            const previewImages = images.slice(0, PREVIEW_LIMIT);
            const hasMore = images.length > PREVIEW_LIMIT;
            
            if (images.length === 0) return null;
            
            return (
                <section class="mb-20">
                    {/* Cabecera de colección */}
                    <div class="mb-8">
                        <h2 class="text-3xl font-sans font-medium mb-4 tracking-widest uppercase" style="color: #FF5722; font-family: 'Oswald', sans-serif;">
                            {name}
                        </h2>
                    </div>
                    
                    {/* Grid de piezas */}
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        {previewImages.map((img, index) => (
                            <article class="bg-white group overflow-hidden border border-stone-200 hover:border-stone-400 transition-all duration-300 hover:shadow-lg">
                                <div class="aspect-square relative overflow-hidden">
                                    <Image 
                                        src={img}
                                        alt={`${name} - Pieza ${index + 1}`}
                                        widths={[300, 600]}
                                        sizes="(max-width: 600px) 300px, 600px"
                                        loading="lazy"
                                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500 ease-out"
                                    />
                                </div>
                            </article>
                        ))}
                    </div>

                    {/* Botón ver más */}
                    {hasMore && (
                        <div class="mt-8 text-center">
                            <a 
                                href={`/coleccion/${folder}`}
                                class="ver-mas-btn inline-block px-8 py-3 border-2 text-sm uppercase tracking-widest font-light transition-all duration-300"
                                style="border-color: #FF5722; color: #FF5722;"
                            >
                                Ver colección completa ({images.length} piezas)
                            </a>
                        </div>
                    )}
                </section>
            );
        })}
    </main>
</Layout>

<style>
    .ver-mas-btn {
        position: relative;
        overflow: hidden;
    }
    
    .ver-mas-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background-color: #FF5722;
        transition: left 0.3s ease;
        z-index: -1;
    }
    
    .ver-mas-btn:hover {
        color: white !important;
        border-color: #FF5722 !important;
    }
    
    .ver-mas-btn:hover::before {
        left: 0;
    }
</style>