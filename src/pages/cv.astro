---

<Layout title="CV">
    <Navbar />

    <main class="pt-24 px-4 sm:px-8 max-w-4xl mx-auto pb-16">
        {/* Cabecera */}
        <header class="mb-16 text-center py-8">
            <h1 class="text-5xl md:text-6xl font-light uppercase tracking-widest mb-4" style="font-family: 'Oswald', sans-serif; color: #FF5722;">
                Lucas Santiago
            </h1>
            <p class="text-xl text-stone-500 font-light tracking-wide">
                {biografia.lugar} · {biografia.año}
            </p>
        </header>

        {/* Biografía */}
        <section class="mb-16">
            <p class="text-lg text-stone-700 font-light leading-relaxed max-w-3xl mx-auto text-center">
                {biografia.intro}
            </p>
        </section>

        {/* Secciones del CV */}
        <div class="space-y-16">
            {secciones.map((seccion) => (
                <section class="mt-12 border-t border-stone-300 pt-10 first:mt-0">
                    <h2 class="text-xl uppercase tracking-widest mb-8 font-medium text-stone-700" style="font-family: 'Oswald', sans-serif;">
                        {seccion.titulo}
                    </h2>
                    
                    <ul class="space-y-3">
                        {seccion.items.map((item) => (
                            <li class="flex flex-col sm:flex-row sm:items-baseline gap-1 sm:gap-4 py-2 border-b border-stone-100 last:border-0">
                                <span class="text-stone-400 text-sm font-medium tabular-nums w-12 shrink-0">
                                    {item.año}
                                </span>
                                <span class="text-stone-800 font-light">
                                    <em>"{item.nombre}"</em>
                                    {item.lugar && (
                                        <span class="text-stone-500">, {item.lugar}</span>
                                    )}
                                </span>
                            </li>
                        ))}
                    </ul>
                </section>
            ))}
        </div>
    </main>
</Layout>
