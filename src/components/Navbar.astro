---
import { prensaReciente, prensaOrdenada, formatearFecha } from '../config/prensa.js';

const links = [
    { name: "Inicio", href: "/" },
    { name: "Colecciones", href: "/colecciones" },
    { name: "Prensa", href: "#", hasDropdown: true },
    { name: "CV", href: "/cv" },
    { name: "Contacto", href: "/contacto" },
];
---
<nav class="fixed top-0 w-full z-50 bg-stone-50/90 backdrop-blur-sm border-b border-stone-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-20">
            <div class="flex-shrink-0 flex items-center">
                <a href="/" class="text-2xl tracking-widest uppercase nav-logo text-stone-800 flex items-center gap-2" style="font-family: 'Oswald', sans-serif;">
                    <img src="/favicon-32x32.png" alt="" class="w-8 h-8" />
                    Lucas Santiago
                </a>
            </div>
            
            <div class="hidden md:flex space-x-2 items-center">
                {links.map((link) => (
                    link.hasDropdown ? (
                        <div class="relative" id="prensa-dropdown-container">
                            <button class="nav-link px-4 py-2 text-sm font-light tracking-wide uppercase flex items-center gap-1" id="prensa-btn">
                                {link.name}
                                <svg class="w-3 h-3 transition-transform duration-200" id="prensa-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                                </svg>
                            </button>

                            <!-- Mega menú dropdown -->
                            <div class="absolute top-full left-1/2 -translate-x-1/2 pt-2 opacity-0 invisible transition-all duration-200" id="prensa-dropdown">
                                <div class="bg-white border border-stone-200 shadow-xl p-4 min-w-[420px]">
                                    <div class="grid grid-cols-1 gap-3">
                                        {prensaReciente.map((item) => (
                                            <a href={item.url} target="_blank" rel="noopener noreferrer"
                                               class="group flex gap-4 p-2 hover:bg-stone-50 transition-colors duration-200 border border-transparent hover:border-stone-200">

                                                <!-- Imagen o placeholder -->
                                                <div class="w-24 h-16 flex-shrink-0 bg-stone-100 overflow-hidden">
                                                    {item.imagen ? (
                                                        <img src={item.imagen} alt="" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" />
                                                    ) : (
                                                        <div class="w-full h-full flex items-center justify-center text-stone-400">
                                                            {item.esVideo ? (
                                                                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
                                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                                                </svg>
                                                            ) : (
                                                                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
                                                                </svg>
                                                            )}
                                                        </div>
                                                    )}
                                                </div>

                                                <!-- Contenido -->
                                                <div class="flex-1 min-w-0">
                                                    <p class="text-xs text-amber-700 font-medium uppercase tracking-wide mb-1">{item.medio}</p>
                                                    <h4 class="text-sm text-stone-800 font-normal leading-tight group-hover:text-amber-800 transition-colors line-clamp-2">{item.titulo}</h4>
                                                    <p class="text-xs text-stone-400 mt-1">{formatearFecha(item.fecha)}</p>
                                                </div>

                                                <!-- Flecha externa -->
                                                <div class="flex-shrink-0 self-center opacity-0 group-hover:opacity-100 transition-opacity">
                                                    <svg class="w-4 h-4 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                                                    </svg>
                                                </div>
                                            </a>
                                        ))}
                                    </div>

                                    <!-- Botón Ver todos -->
                                    {prensaOrdenada.length > 3 && (
                                        <a href="/prensa" class="block mt-3 pt-3 border-t border-stone-200 text-center text-sm text-stone-500 hover:text-amber-700 transition-colors">
                                            Ver todas las apariciones ({prensaOrdenada.length})
                                        </a>
                                    )}
                                </div>
                            </div>
                        </div>
                    ) : (
                        <a href={link.href} class="nav-link px-4 py-2 text-sm font-light tracking-wide uppercase">
                            {link.name}
                        </a>
                    )
                ))}
            </div>

            <!-- Mobile menu button -->
            <button class="md:hidden flex items-center gap-2 p-2" id="mobile-menu-btn">
                <span class="text-sm font-light tracking-wide uppercase text-stone-600">Menú</span>
                <svg class="w-6 h-6 text-stone-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16"/>
                </svg>
            </button>
        </div>
    </div>

    <!-- Mobile menu -->
    <div class="hidden md:hidden" id="mobile-menu">
        <div class="px-4 py-4 space-y-2 bg-stone-50 border-t border-stone-200">
            {links.map((link) => (
                <a href={link.hasDropdown ? "/prensa" : link.href} class="block px-4 py-3 text-sm font-light tracking-wide uppercase text-stone-600 hover:text-stone-900 hover:bg-stone-100 transition-colors">
                    {link.name}
                </a>
            ))}
        </div>
    </div>
</nav>

<style>
    .nav-link {
        position: relative;
        color: #57534e;
        transition: color 0.3s ease;
    }
    
    .nav-link::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        width: 0;
        height: 2px;
        background-color: #9D7748;
        transition: all 0.3s ease;
        transform: translateX(-50%);
    }
    
    .nav-link:hover {
        color: #9D7748;
    }
    
    .nav-link:hover::after {
        width: 80%;
    }

    .nav-logo {
        transition: opacity 0.3s ease;
    }

    .nav-logo:hover {
        opacity: 0.8;
    }
</style>

<script>
    // Mobile menu toggle
    const btn = document.getElementById('mobile-menu-btn');
    const menu = document.getElementById('mobile-menu');

    btn?.addEventListener('click', () => {
        menu?.classList.toggle('hidden');
    });

    // Desktop Prensa dropdown
    const prensaContainer = document.getElementById('prensa-dropdown-container');
    const prensaDropdown = document.getElementById('prensa-dropdown');
    const prensaArrow = document.getElementById('prensa-arrow');

    if (prensaContainer && prensaDropdown && prensaArrow) {
        prensaContainer.addEventListener('mouseenter', () => {
            prensaDropdown.classList.remove('opacity-0', 'invisible');
            prensaDropdown.classList.add('opacity-100', 'visible');
            prensaArrow.classList.add('rotate-180');
        });

        prensaContainer.addEventListener('mouseleave', () => {
            prensaDropdown.classList.add('opacity-0', 'invisible');
            prensaDropdown.classList.remove('opacity-100', 'visible');
            prensaArrow.classList.remove('rotate-180');
        });
    }

</script>